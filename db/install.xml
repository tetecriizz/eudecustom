<?xml version="1.0" encoding="UTF-8" ?>
<XMLDB PATH="local/eudecustom/db" VERSION="20120122" COMMENT="XMLDB file for Moodle local/eudecustom"
       xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
       xsi:noNamespaceSchemaLocation="../../../lib/xmldb/xmldb.xsd"
>
    <TABLES>
        <TABLE NAME="local_eudecustom_mat_int" COMMENT="Number of times a user has enroled in a course.">
            <FIELDS>
                <FIELD NAME="id" TYPE="int" LENGTH="10" NOTNULL="true" UNSIGNED="true" SEQUENCE="true"/>
                <FIELD NAME="user_email" TYPE="char" LENGTH="100" NOTNULL="true" UNSIGNED="false" SEQUENCE="false" COMMENT="Foreign key to user.email."/>
                <FIELD NAME="course_shortname" TYPE="char" LENGTH="100" NOTNULL="true" UNSIGNED="false" SEQUENCE="false" COMMENT="Foreign key to course.shortname."/>
                <FIELD NAME="category_id" TYPE="int" LENGTH="10" NOTNULL="true" UNSIGNED="false" SEQUENCE="false" COMMENT="Foreign key to course_categories.id."/>
                <FIELD NAME="matriculation_date" TYPE="int" LENGTH="10" NOTNULL="true" UNSIGNED="false" SEQUENCE="false" COMMENT="Matriculation date."/>
                <FIELD NAME="conv_number" TYPE="int" LENGTH="10" NOTNULL="false" UNSIGNED="false" SEQUENCE="false" COMMENT="Convocatory number."/>
            </FIELDS>
            <KEYS>
                <KEY NAME="primary" TYPE="primary" FIELDS="id"/>
                <KEY NAME="user_email" TYPE="foreign" FIELDS="user_email" REFTABLE="user" REFFIELDS="email"/>
                <KEY NAME="course_shortname" TYPE="foreign" FIELDS="course_shortname" REFTABLE="course" REFFIELDS="shortname"/>
                <KEY NAME="category_id" TYPE="foreign" FIELDS="category_id" REFTABLE="course_categories" REFFIELDS="id"/>
            </KEYS>
            <INDEXES>
                <INDEX NAME="idx_mat_int_full" UNIQUE="true" FIELDS="user_email, course_shortname, category_id, matriculation_date"/>
                <INDEX NAME="idx_mat_int" UNIQUE="false" FIELDS="user_email, course_shortname, category_id"/>
            </INDEXES>
        </TABLE>
        <TABLE NAME="local_eudecustom_user" COMMENT="User specific data.">
            <FIELDS>
                <FIELD NAME="id" TYPE="int" LENGTH="10" NOTNULL="true" UNSIGNED="true" SEQUENCE="true"/>
                <FIELD NAME="user_email" TYPE="char" LENGTH="100" NOTNULL="true" UNSIGNED="false" SEQUENCE="false" COMMENT="Foreign key to user.email."/>
                <FIELD NAME="course_category" TYPE="int" LENGTH="10" NOTNULL="true" UNSIGNED="false" SEQUENCE="false" COMMENT="Foreign key to course_categories.id."/>
                <FIELD NAME="num_intensive" TYPE="int" LENGTH="10" NOTNULL="true" UNSIGNED="false" SEQUENCE="false" COMMENT="Number of intensive courses"/>
            </FIELDS>
            <KEYS>
                <KEY NAME="primary" TYPE="primary" FIELDS="id"/>
                <KEY NAME="user_email" TYPE="foreign" FIELDS="user_email" REFTABLE="user" REFFIELDS="email"/>
                <KEY NAME="course_category" TYPE="foreign" FIELDS="course_category" REFTABLE="course_categories" REFFIELDS="id"/>
            </KEYS>
            <INDEXES>
                <INDEX NAME="idx_user_email" UNIQUE="false" FIELDS="user_email"/>
                <INDEX NAME="idx_user_email_category" UNIQUE="true" FIELDS="user_email, course_category"/>
            </INDEXES>
        </TABLE>
        <TABLE NAME="local_eudecustom_call_date" COMMENT="Course call dates.">
            <FIELDS>
                <FIELD NAME="id" TYPE="int" LENGTH="10" NOTNULL="true" UNSIGNED="true" SEQUENCE="true"/>
                <FIELD NAME="courseid" TYPE="int" LENGTH="10" NOTNULL="true" UNSIGNED="false" SEQUENCE="false" COMMENT="Foreign key to course.id."/>
                <FIELD NAME="fecha1" TYPE="int" LENGTH="10" NOTNULL="false" UNSIGNED="false" SEQUENCE="false" COMMENT="First date."/>
                <FIELD NAME="fecha2" TYPE="int" LENGTH="10" NOTNULL="false" UNSIGNED="false" SEQUENCE="false" COMMENT="Second date."/>
                <FIELD NAME="fecha3" TYPE="int" LENGTH="10" NOTNULL="false" UNSIGNED="false" SEQUENCE="false" COMMENT="Third date."/>
                <FIELD NAME="fecha4" TYPE="int" LENGTH="10" NOTNULL="false" UNSIGNED="false" SEQUENCE="false" COMMENT="Fourth date."/>
            </FIELDS>
            <KEYS>
                <KEY NAME="primary" TYPE="primary" FIELDS="id" NEXT="courseid"/>
                <KEY NAME="courseid" TYPE="foreign" FIELDS="courseid" REFTABLE="course" REFFIELDS="id"/>
            </KEYS>
            <INDEXES>
                <INDEX NAME="idx_call_date_courseid" UNIQUE="false" FIELDS="courseid"/>
                <INDEX NAME="idx_call_date_mat_dates" UNIQUE="false" FIELDS="courseid, fecha1, fecha2, fecha3, fecha4"/>
            </INDEXES>
        </TABLE>
		<TABLE NAME="local_eudecustom_invtimes" COMMENT="Invested time for each user on course.">
            <FIELDS>
                <FIELD NAME="id" TYPE="int" LENGTH="10" NOTNULL="true" UNSIGNED="true" SEQUENCE="true"/>
                <FIELD NAME="userid" TYPE="int" LENGTH="10" NOTNULL="true" UNSIGNED="false" SEQUENCE="false" COMMENT="Id of user"/>
                <FIELD NAME="courseid" TYPE="int" LENGTH="10" NOTNULL="true" UNSIGNED="false" SEQUENCE="false" COMMENT="Id of course"/>
                <FIELD NAME="day1" TYPE="int" LENGTH="10" NOTNULL="false" DEFAULT="0" UNSIGNED="false" SEQUENCE="false" COMMENT="Time since 7 days, only sunday"/>
                <FIELD NAME="day2" TYPE="int" LENGTH="10" NOTNULL="false" DEFAULT="0" UNSIGNED="false" SEQUENCE="false" COMMENT="Time since 7 days, only monday"/>
                <FIELD NAME="day3" TYPE="int" LENGTH="10" NOTNULL="false" DEFAULT="0" UNSIGNED="false" SEQUENCE="false" COMMENT="Time since 7 days, only tuesday"/>
                <FIELD NAME="day4" TYPE="int" LENGTH="10" NOTNULL="false" DEFAULT="0" UNSIGNED="false" SEQUENCE="false" COMMENT="Time since 7 days, only wednesday"/>
                <FIELD NAME="day5" TYPE="int" LENGTH="10" NOTNULL="false" DEFAULT="0" UNSIGNED="false" SEQUENCE="false" COMMENT="Time since 7 days, only thursday"/>
                <FIELD NAME="day6" TYPE="int" LENGTH="10" NOTNULL="false" DEFAULT="0" UNSIGNED="false" SEQUENCE="false" COMMENT="Time since 7 days, only friday"/>
                <FIELD NAME="day7" TYPE="int" LENGTH="10" NOTNULL="false" DEFAULT="0" UNSIGNED="false" SEQUENCE="false" COMMENT="Time since 7 days, only saturday"/>
                <FIELD NAME="totaltime" TYPE="int" LENGTH="10" NOTNULL="true" DEFAULT="0" UNSIGNED="false" SEQUENCE="false" COMMENT="Total time "/>
                <FIELD NAME="timecreated" TYPE="int" LENGTH="10" NOTNULL="true" DEFAULT="0" UNSIGNED="false" SEQUENCE="false" COMMENT="."/>
                <FIELD NAME="timemodified" TYPE="int" LENGTH="10" NOTNULL="true" DEFAULT="0" UNSIGNED="false" SEQUENCE="false" COMMENT="."/>
            </FIELDS>
            <KEYS>
                <KEY NAME="primary" TYPE="primary" FIELDS="id"/>
            </KEYS>
            <INDEXES>
                <INDEX NAME="idx_user_course" UNIQUE="true" FIELDS="userid, courseid"/>
            </INDEXES>
        </TABLE>
    </TABLES>
</XMLDB>